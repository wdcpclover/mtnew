{
  "id": "nodebb-plugin-moti-api",
  "name": "莫提之地API扩展",
  "description": "为莫提之地小程序提供API扩展功能，包括微信登录、权限控制、支付集成、划线笔记等",
  "url": "https://github.com/wdcpclover/mtnew",
  "library": "./library.js",
  "hooks": [
    {
      "hook": "static:app.load",
      "method": "init"
    },
    {
      "hook": "filter:user.create",
      "method": "onUserCreate"
    },
    {
      "hook": "filter:post.get",
      "method": "checkReadPermission"
    },
    {
      "hook": "filter:scripts.get",
      "method": "addScripts"
    }
  ],
  "staticDirs": {
    "static": "./static"
  },
  "css": [],
  "less": [],
  "scss": [],
  "acpScripts": [],
  "scripts": [
    "static/lib/highlight.js"
  ],
  "modules": {},
  "languages": "languages",
  "templates": "templates"
}
