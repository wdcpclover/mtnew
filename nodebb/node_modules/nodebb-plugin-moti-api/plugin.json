{
  "id": "nodebb-plugin-moti-api",
  "name": "Moti API",
  "description": "莫提之地小程序专用 REST API、划线笔记及积分系统",
  "library": "library.js",
  "hooks": [
    {
      "hook": "static:app.load",
      "method": "init"
    },
    {
      "hook": "filter:topic.create",
      "method": "onTopicCreate"
    },
    {
      "hook": "filter:post.create",
      "method": "onPostCreate"
    },
    {
      "hook": "action:post.upvote",
      "method": "onPostUpvote"
    }
  ],
  "scripts": [
    "static/lib/highlights.js",
    "static/lib/points.js"
  ],
  "staticDirs": {
    "static": "static"
  },
  "less": [
    "static/styles/highlights.css"
  ]
}
