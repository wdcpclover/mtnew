/* 发起提问页面样式 */
@import "/app.wxss";

.page {
  height: 100vh;
  background-color: var(--bg-color-secondary);
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* ============ 导航栏 ============ */
.nav-header {
  background-color: var(--bg-color-primary);
  border-bottom: 1px solid var(--border-color);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  height: 88rpx;
}

.nav-left,
.nav-right {
  min-width: 100rpx;
}

.nav-right {
  text-align: right;
}

.nav-btn {
  font-size: 32rpx;
  color: var(--primary-color);
  font-weight: 500;
}

.nav-btn.disabled {
  opacity: 0.5;
}

.nav-center {
  flex: 1;
  text-align: center;
}

.nav-title {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-color-primary);
}

/* ============ 表单内容 ============ */
.form-content {
  flex: 1;
  padding: 32rpx;
}

.form-section {
  background-color: var(--bg-color-primary);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.section-label {
  font-size: 28rpx;
  color: var(--text-color-secondary);
  margin-bottom: 16rpx;
  font-weight: 500;
}

/* ============ 分类选择 ============ */
.picker-wrapper {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1px solid var(--border-color);
}

.picker-text {
  font-size: 32rpx;
  color: var(--text-color-primary);
  flex: 1;
}

.picker-arrow {
  font-size: 48rpx;
  color: var(--text-color-tertiary);
  transform: rotate(90deg);
  margin-left: 16rpx;
}

/* ============ 标题输入 ============ */
.title-input {
  font-size: 32rpx;
  color: var(--text-color-primary);
  padding: 24rpx 0;
  border-bottom: 1px solid var(--border-color);
}

.input-placeholder {
  color: var(--text-color-tertiary);
}

.char-count {
  font-size: 24rpx;
  color: var(--text-color-tertiary);
  text-align: right;
  margin-top: 12rpx;
}

/* ============ 内容输入 ============ */
.content-section {
  min-height: 400rpx;
}

.content-input {
  font-size: 32rpx;
  color: var(--text-color-primary);
  line-height: 1.6;
  min-height: 300rpx;
  width: 100%;
}

/* ============ VIP 提示 ============ */
.vip-notice {
  background-color: rgba(255, 235, 59, 0.1);
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}

.notice-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.notice-text {
  font-size: 28rpx;
  color: var(--text-color-secondary);
  flex: 1;
}

/* ============ 深色模式 ============ */
.page.dark .vip-notice {
  background-color: rgba(255, 235, 59, 0.15);
}
