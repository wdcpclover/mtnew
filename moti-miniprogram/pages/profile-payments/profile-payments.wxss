.container {
  min-height: 100vh;
  background-color: var(--bg-color);
}

.header {
  position: sticky;
  top: 0;
  background-color: var(--card-bg);
  border-bottom: 2rpx solid var(--border-color);
  z-index: 100;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 32rpx;
}

.back-btn { padding: 8rpx; margin-left: -8rpx; }
.back-icon { width: 48rpx; height: 48rpx; }
.page-title { font-size: 36rpx; font-weight: 700; color: var(--text-main); }
.placeholder { width: 48rpx; }

.content-scroll {
  height: calc(100vh - 120rpx);
  padding: 32rpx;
}

.status-card, .redeem-card, .records-card {
  background-color: var(--card-bg);
  border-radius: 24rpx;
  border: 2rpx solid var(--border-color);
  padding: 24rpx;
  margin-bottom: 24rpx;
}

.status-title, .card-title {
  font-size: 28rpx;
  font-weight: 700;
  color: var(--text-main);
  margin-bottom: 16rpx;
  display: block;
}

.status-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 2rpx dashed var(--border-color);
}

.status-item.no-border { border-bottom: none; }

.status-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
  color: var(--text-main);
  font-size: 28rpx;
}

.status-icon { width: 36rpx; height: 36rpx; opacity: 0.6; }

.status-value {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-sub);
}

.status-value.gold { color: var(--accent-gold); }
.status-value.mono { font-family: monospace; }

.redeem-input-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.redeem-icon { width: 40rpx; height: 40rpx; opacity: 0.6; }

.redeem-input {
  flex: 1;
  padding: 16rpx 20rpx;
  background-color: var(--input-bg);
  border: 2rpx solid var(--border-color);
  border-radius: 12rpx;
  font-size: 28rpx;
  color: var(--text-main);
}

.input-placeholder { color: var(--text-sub); }

.redeem-btn {
  padding: 16rpx 24rpx;
  background-color: var(--accent-gold);
  color: #fff;
  font-size: 24rpx;
  font-weight: 700;
  border-radius: 12rpx;
  border: none;
}

.redeem-btn::after { border: none; }

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 2rpx solid var(--border-color);
}

.record-item:last-child { border-bottom: none; }

.record-info { display: flex; flex-direction: column; gap: 4rpx; }
.record-product { font-size: 28rpx; color: var(--text-main); }
.record-date { font-size: 24rpx; color: var(--text-sub); }
.record-amount { font-size: 28rpx; font-weight: 700; color: var(--accent-gold); font-family: monospace; }
