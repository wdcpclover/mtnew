/* 最新页面样式 - 使用全局CSS变量支持深色模式 */

.page {
  width: 100%;
  min-height: 100vh;
}

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: var(--bg-page);
}

/* ============ 导航栏 ============ */
.nav-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 32rpx;
  background-color: var(--bg-page);
}

.nav-left {
  width: 80rpx;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 20rpx;
  height: 34rpx;
}

.nav-center {
  flex: 1;
  text-align: center;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.nav-right {
  display: flex;
  align-items: center;
}

.nav-capsule {
  display: flex;
  align-items: center;
  height: 60rpx;
  padding: 0 20rpx;
  background-color: var(--capsule-bg);
  border-radius: 30rpx;
  border: 1rpx solid var(--border-color);
}

.capsule-dots {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: var(--text-primary);
}

.dot.dot-large {
  width: 16rpx;
  height: 16rpx;
}

.capsule-divider {
  width: 2rpx;
  height: 32rpx;
  background-color: var(--border-color);
  margin: 0 16rpx;
}

.capsule-icon {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-img {
  width: 32rpx;
  height: 32rpx;
}

/* ============ 搜索栏 ============ */
.search-bar {
  display: flex;
  align-items: center;
  padding: 16rpx 32rpx;
  gap: 20rpx;
  background-color: var(--bg-page);
}

.search-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  height: 64rpx;
  padding: 0 20rpx;
  background-color: var(--bg-input);
  border-radius: 8rpx;
  gap: 12rpx;
}

.search-icon {
  width: 28rpx;
  height: 28rpx;
  opacity: 0.4;
}

.search-placeholder {
  font-size: 26rpx;
  color: var(--text-tertiary);
}

.message-btn {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.message-icon {
  width: 44rpx;
  height: 44rpx;
}

.badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 6rpx;
  background-color: var(--color-primary);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.badge text {
  font-size: 18rpx;
  color: #FFFFFF;
  font-weight: 500;
}

/* ============ Tab 标签 ============ */
.tab-header {
  display: flex;
  align-items: flex-end;
  padding: 20rpx 32rpx 0;
  gap: 40rpx;
  background-color: var(--bg-page);
  border-bottom: 2rpx solid var(--border-color);
}

.tab-item {
  position: relative;
  padding-bottom: 16rpx;
}

.tab-item text {
  font-size: 28rpx;
  color: var(--text-tertiary);
}

.tab-item.active text {
  color: var(--text-primary);
  font-weight: 500;
}

.tab-line {
  position: absolute;
  bottom: -2rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 32rpx;
  height: 4rpx;
  background-color: var(--color-primary);
  border-radius: 2rpx;
}

/* ============ 问题列表 ============ */
.question-list {
  flex: 1;
  height: calc(100vh - 400rpx);
}

.question-list-inner {
  background-color: var(--bg-primary);
}

.question-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx;
  border-bottom: 2rpx solid var(--divider-color);
}

.question-text {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-primary);
  line-height: 1.4;
  margin-right: 12rpx;
}

.hot-tag {
  flex-shrink: 0;
  padding: 4rpx 10rpx;
  background-color: var(--color-primary);
  border-radius: 4rpx;
}

.hot-tag text {
  font-size: 20rpx;
  color: #FFFFFF;
  font-weight: 500;
}

/* ============ 加载状态 ============ */
.loading-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx 0;
  background-color: var(--bg-primary);
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid var(--divider-color);
  border-top-color: var(--color-primary);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: var(--text-tertiary);
}

/* 空状态 */
.empty-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
  background-color: var(--bg-primary);
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  opacity: 0.5;
}

.empty-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: var(--text-tertiary);
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 32rpx 0;
  background-color: var(--bg-primary);
}

.no-more text {
  font-size: 24rpx;
  color: var(--text-placeholder);
}

/* 底部安全区域 */
.safe-bottom {
  height: 160rpx;
  background-color: var(--bg-primary);
}

/* ============ 底部 TabBar ============ */
.bottom-tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: flex-start;
  justify-content: space-around;
  height: 100rpx;
  padding-bottom: env(safe-area-inset-bottom);
  background-color: var(--bg-primary);
  border-top: 2rpx solid var(--divider-color);
}

.bottom-tab-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  padding: 16rpx 24rpx 12rpx;
}

.bottom-tab-item.active::before {
  content: '';
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 32rpx;
  height: 4rpx;
  background-color: var(--color-primary);
  border-radius: 2rpx;
}

.bottom-tab-icon {
  width: 40rpx;
  height: 40rpx;
}

.bottom-tab-text {
  font-size: 20rpx;
  color: var(--tab-color);
}

.bottom-tab-item.active .bottom-tab-text {
  color: var(--tab-active-color);
}
