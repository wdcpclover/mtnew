/* 最新页面样式 - 1:1还原 */

page {
  --bg-page: #F3F4F6;
  --bg-header-block: #FFFFFF;
  --bg-search-input: #F3F4F6;
  --bg-content: #FFFFFF;
  --text-primary: #1F1F1F;
  --text-secondary: #9CA3AF;
  --text-placeholder: #9CA3AF;
  --color-primary: #D7942B;
  --divider-color: #E5E7EB;
  --tab-active-color: #1F1F1F;
  --tab-inactive-color: #9CA3AF;
  --tab-top-active-color: #1F1F1F;
  --tab-top-inactive-color: #9CA3AF;
  --message-btn-bg: #FFFFFF;
  --message-btn-border: #E5E7EB;
  --bottom-tab-bg: #FFFFFF;
  --bottom-tab-border: #E5E7EB;
}

.page.dark {
  --bg-page: #111111;
  --bg-header-block: #1C1C1C;
  --bg-search-input: #2C2C2C;
  --bg-content: #202020;
  --text-primary: #E7E7E7;
  --text-secondary: #8E8E8E;
  --text-placeholder: #8E8E8E;
  --color-primary: #D7942B;
  --divider-color: #303030;
  --tab-active-color: #E7E7E7;
  --tab-inactive-color: #8E8E8E;
  --tab-top-active-color: #E7E7E7;
  --tab-top-inactive-color: #8E8E8E;
  --message-btn-bg: #1C1C1C;
  --message-btn-border: #303030;
  --bottom-tab-bg: #1C1C1C;
  --bottom-tab-border: #303030;
}

.page {
  width: 100%;
  min-height: 100vh;
  background-color: var(--bg-page);
  box-sizing: border-box;
}

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  padding-bottom: 160rpx;
  box-sizing: border-box;
}

/* ============ 导航栏 ============ */
/* 顶部 Status Bar + Title 区域白底 */
.nav-header {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 32rpx;
  background-color: var(--bg-header-block);
  z-index: 100;
}

.nav-left {
  width: 160rpx;
  flex-shrink: 0;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 20rpx;
  height: 34rpx;
}

.nav-center {
  flex: 1;
  text-align: center;
}

.nav-title {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-primary);
}

.nav-right {
  width: 160rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

/* 胶囊样式适配 */
.nav-capsule {
  display: flex;
  align-items: center;
  height: 60rpx;
  padding: 0 20rpx;
  background-color: rgba(255,255,255,0.6);
  border-radius: 30rpx;
  border: 1rpx solid rgba(0,0,0,0.1);
}
.page.dark .nav-capsule {
  background-color: rgba(255,255,255,0.1);
  border: 1rpx solid rgba(255,255,255,0.1);
}

/* ============ 搜索栏区域 ============ */
/* 390 × 62px 白色圆角背景块 */
.search-section {
  width: 100%;
  background-color: var(--bg-header-block);
  border-bottom-left-radius: 24rpx; /* 12px */
  border-bottom-right-radius: 24rpx; /* 12px */
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx 24rpx 32rpx; /* top:16 right:16 bottom:12 left:16 */
  box-sizing: border-box;
}

/* 搜索框 自适应宽度 */
.search-input-wrapper {
  flex: 1;
  height: 68rpx; /* 34px */
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  background-color: var(--bg-search-input);
  border-radius: 16rpx;
  gap: 12rpx;
  box-sizing: border-box;
  margin-right: 24rpx;
}

.search-icon {
  width: 36rpx; /* 18px */
  height: 36rpx;
  flex-shrink: 0;
}

/* 搜索文字 13号字 PingFang SC */
.search-placeholder {
  font-size: 26rpx; /* 13px */
  font-family: 'PingFang SC', -apple-system, sans-serif;
  color: var(--text-placeholder); /* #9CA3AF */
  line-height: 36rpx; /* 18px */
}

/* 消息图标 24x24 跟搜索框垂直居中 */
.message-btn {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48rpx; /* 24px */
  height: 48rpx;
  flex-shrink: 0;
}

.message-icon {
  width: 48rpx;
  height: 48rpx;
}

/* 橙色未读徽章 */
.badge {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  min-width: 32rpx;
  height: 28rpx;
  padding: 0 8rpx;
  background-color: var(--color-primary); /* 橙色 #D7942B */
  border: 2rpx solid #FFFFFF;
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1;
  box-sizing: border-box;
}

.badge text {
  font-size: 18rpx;
  color: #FFFFFF;
  font-weight: 600;
  line-height: 1;
}

/* ============ 内容区域 ============ */
/* Frame 3015385: 390 × 603, top: 158px, radius-top: 12px, gap: 12px */
.content-container {
  flex: 1;
  background-color: var(--bg-content);
  margin-top: 12rpx; /* 158 - 152 = 6px */
  border-top-left-radius: 24rpx; /* 12px */
  border-top-right-radius: 24rpx; /* 12px */
  display: flex;
  flex-direction: column;
  gap: 24rpx; /* 12px */
  overflow: hidden;
}

/* ============ Tab 标签 ============ */
.tab-header {
  display: flex;
  align-items: flex-end;
  padding: 16rpx 32rpx 0;
  gap: 60rpx;
  border-bottom: 2rpx solid var(--divider-color);
}

.tab-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 12rpx;
}

.tab-item text {
  font-size: 26rpx; /* 13px */
  font-family: 'PingFang SC', -apple-system, sans-serif;
  color: var(--tab-top-inactive-color);
  font-weight: 500; /* Medium */
  line-height: 36rpx;
}

.tab-item.active text {
  color: var(--tab-top-active-color);
  font-weight: 500;
  font-size: 26rpx; /* 13px */
}

/* 选中指示器: 橙色短横线 */
.tab-line {
  position: absolute;
  left: 50%;
  bottom: 2rpx;
  width: 40rpx; /* 约20px */
  height: 4rpx; /* 约2px */
  background-color: var(--color-primary);
  border-radius: 2rpx;
  transform: translateX(-50%);
}

/* ============ 问题列表 ============ */
.question-list {
  flex: 1;
  height: 0; /* Important for scroll-view in flex */
}

.question-list-inner {
  padding: 0 32rpx; /* Side padding 16px */
}

.question-item {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  gap: 12rpx;
  padding: 24rpx 0;
  border-bottom: 2rpx solid var(--divider-color);
}

.question-text {
  flex: 0 1 auto;
  min-width: 0;
  display: block;
  font-size: 28rpx; /* 14px */
  color: var(--text-primary);
  line-height: 42rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* Hot Tag styling from SVG */
.hot-tag {
  flex-shrink: 0;
  width: 28rpx; /* 14px */
  height: 28rpx; /* 14px */
  background-color: var(--color-primary);
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.hot-text {
  font-size: 20rpx;
  color: #FFFFFF;
  font-weight: 600;
  line-height: 1;
}

/* ============ 加载状态 ============ */
.loading-wrapper {
  padding: 40rpx 0;
  display: flex;
  justify-content: center;
}
.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid var(--divider-color);
  border-top-color: var(--color-primary);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}
@keyframes spin { to { transform: rotate(360deg); } }

/* 空状态 */
.empty-wrapper {
  padding: 100rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.empty-icon {
  width: 200rpx;
  height: 200rpx;
  opacity: 0.1;
}
.empty-text {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* ============ 底部 TabBar ============ */
.bottom-tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-around;
  height: 160rpx; /* 80px (含安全区) */
  padding-bottom: env(safe-area-inset-bottom);
  background-color: var(--bottom-tab-bg);
  border-top: 2rpx solid var(--bottom-tab-border);
  z-index: 900;
}

.bottom-tab-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 100%;
}

.bottom-tab-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.bottom-tab-text {
  font-size: 20rpx;
  color: var(--tab-inactive-color);
  font-weight: 400;
}

.bottom-tab-item.active .bottom-tab-text {
  color: var(--tab-active-color);
  font-weight: 500;
}
