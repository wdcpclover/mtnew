/* 提问页面样式 - 使用全局CSS变量支持深色模式 */

.page {
  width: 100%;
  min-height: 100vh;
}

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: var(--bg-page);
}

/* ============ 导航栏 ============ */
.nav-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 32rpx;
  background-color: var(--bg-page);
}

.nav-left {
  width: 80rpx;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 20rpx;
  height: 34rpx;
}

.nav-center {
  flex: 1;
  text-align: center;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.nav-right {
  display: flex;
  align-items: center;
}

.nav-capsule {
  display: flex;
  align-items: center;
  height: 60rpx;
  padding: 0 20rpx;
  background-color: var(--capsule-bg);
  border-radius: 30rpx;
  border: 1rpx solid var(--border-color);
}

.capsule-dots {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: var(--text-primary);
}

.dot.dot-large {
  width: 16rpx;
  height: 16rpx;
}

.capsule-divider {
  width: 2rpx;
  height: 32rpx;
  background-color: var(--border-color);
  margin: 0 16rpx;
}

.capsule-icon {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-img {
  width: 32rpx;
  height: 32rpx;
}

/* ============ 用户信息卡片 ============ */
.user-card {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  background: linear-gradient(135deg, #D7942B 0%, #E5A84B 100%);
  gap: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1;
}

.user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.user-detail {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #FFFFFF;
}

.user-subtitle {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
}

.ask-btn {
  padding: 12rpx 24rpx;
  border: 2rpx solid #FFFFFF;
  border-radius: 32rpx;
  background-color: transparent;
}

.ask-btn text {
  font-size: 24rpx;
  color: #FFFFFF;
  font-weight: 500;
}

.ask-btn:active {
  background-color: rgba(255, 255, 255, 0.2);
}

.user-card .message-btn {
  position: relative;
  margin-left: 16rpx;
}

.user-card .message-icon {
  width: 44rpx;
  height: 44rpx;
  filter: brightness(0) invert(1);
}

.user-card .badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 6rpx;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.user-card .badge text {
  font-size: 18rpx;
  color: var(--color-primary);
  font-weight: 600;
}

/* ============ 筛选栏 ============ */
.filter-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 32rpx;
  background-color: var(--bg-primary);
  border-bottom: 2rpx solid var(--divider-color);
}

.filter-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.filter-actions {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.sort-btn,
.filter-btn {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.sort-btn text,
.filter-btn text {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.sort-arrow,
.filter-icon {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.6;
}

/* ============ 话题筛选面板 ============ */
.topic-filter-panel {
  padding: 20rpx 32rpx;
  background-color: var(--bg-primary);
  border-bottom: 2rpx solid var(--divider-color);
}

.topic-label {
  font-size: 26rpx;
  color: var(--text-secondary);
  margin-bottom: 16rpx;
  display: block;
}

.topic-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.topic-tag {
  padding: 10rpx 24rpx;
  border-radius: 32rpx;
  background-color: var(--bg-secondary);
  border: 2rpx solid transparent;
}

.topic-tag text {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.topic-tag.active {
  background-color: rgba(215, 148, 43, 0.1);
  border-color: var(--color-primary);
}

.topic-tag.active text {
  color: var(--color-primary);
  font-weight: 500;
}

/* ============ 问题列表 ============ */
.question-list {
  flex: 1;
  height: calc(100vh - 450rpx);
}

.list-inner {
  background-color: var(--bg-primary);
}

.question-item {
  display: flex;
  align-items: flex-start;
  padding: 24rpx 32rpx;
  border-bottom: 2rpx solid var(--divider-color);
  gap: 16rpx;
}

.question-item:active {
  background-color: var(--bg-secondary);
}

.vote-count {
  display: flex;
  align-items: center;
  gap: 4rpx;
  min-width: 80rpx;
  flex-shrink: 0;
}

.vote-icon {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.5;
}

.vote-count text {
  font-size: 26rpx;
  color: var(--text-tertiary);
  font-weight: 500;
}

.vote-count.hot .vote-icon {
  opacity: 1;
}

.vote-count.hot text {
  color: var(--color-primary);
}

.question-title {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-primary);
  line-height: 1.5;
}

.question-item.read .question-title {
  color: var(--text-tertiary);
}

/* ============ 排序菜单 ============ */
.sort-menu {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: var(--bg-mask);
  z-index: 100;
  display: flex;
  align-items: flex-start;
  justify-content: flex-end;
  padding-top: 320rpx;
  padding-right: 32rpx;
}

.sort-menu-content {
  background-color: var(--bg-primary);
  border-radius: 12rpx;
  box-shadow: var(--shadow-lg);
  overflow: hidden;
  min-width: 200rpx;
}

.sort-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  border-bottom: 2rpx solid var(--divider-color);
}

.sort-option:last-child {
  border-bottom: none;
}

.sort-option text {
  font-size: 28rpx;
  color: var(--text-primary);
}

.sort-option.active text {
  color: var(--color-primary);
  font-weight: 500;
}

.check-icon {
  width: 28rpx;
  height: 28rpx;
}

/* ============ 加载状态 ============ */
.loading-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx 0;
  background-color: var(--bg-primary);
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid var(--divider-color);
  border-top-color: var(--color-primary);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: var(--text-tertiary);
}

/* 空状态 */
.empty-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
  background-color: var(--bg-primary);
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  opacity: 0.5;
}

.empty-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: var(--text-tertiary);
}

/* 没有更多 */
.no-more {
  text-align: center;
  padding: 32rpx 0;
  background-color: var(--bg-primary);
}

.no-more text {
  font-size: 24rpx;
  color: var(--text-placeholder);
}

/* 底部安全区域 */
.safe-bottom {
  height: 160rpx;
  background-color: var(--bg-primary);
}

/* ============ 底部 TabBar ============ */
.bottom-tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: flex-start;
  justify-content: space-around;
  height: 100rpx;
  padding-bottom: env(safe-area-inset-bottom);
  background-color: var(--bg-primary);
  border-top: 2rpx solid var(--divider-color);
}

.bottom-tab-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  padding: 16rpx 24rpx 12rpx;
}

.bottom-tab-item.active::before {
  content: '';
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 32rpx;
  height: 4rpx;
  background-color: var(--color-primary);
  border-radius: 2rpx;
}

.bottom-tab-icon {
  width: 40rpx;
  height: 40rpx;
}

.bottom-tab-text {
  font-size: 20rpx;
  color: var(--tab-color);
}

.bottom-tab-item.active .bottom-tab-text {
  color: var(--tab-active-color);
}
