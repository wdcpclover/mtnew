<view class="container {{darkMode ? 'dark' : ''}}">
  <!-- 顶部导航 -->
  <view class="header" style="padding-top: {{statusBarHeight}}px;">
    <view class="header-content">
      <view class="header-left">
        <view class="back-btn" bindtap="goBack">
          <image src="/images/icons/arrow-left.svg" class="back-icon" mode="aspectFit" />
        </view>
        <text class="header-title">我的收藏</text>
      </view>
      <view class="header-right">
        <view class="capsule-btn">
          <image src="/images/icons/more.svg" class="capsule-icon" mode="aspectFit" bindtap="showMore" />
          <view class="capsule-divider"></view>
          <image src="/images/icons/menu-dots.svg" class="capsule-icon" mode="aspectFit" />
        </view>
      </view>
    </view>
  </view>

  <!-- 主内容区 -->
  <scroll-view
    class="content-scroll"
    scroll-y
    enhanced
    show-scrollbar="{{false}}"
    style="padding-top: {{statusBarHeight + 44}}px;"
  >
    <!-- 收藏列表区 -->
    <view class="section">
      <view class="section-header">
        <view class="section-title-wrapper">
          <image src="/images/icons/star-outline.svg" class="section-icon" mode="aspectFit" />
          <text class="section-title">收藏列表</text>
        </view>
        <view class="edit-btn" bindtap="toggleEditMode">
          <text>{{isEditMode ? '确定' : '编辑'}}</text>
        </view>
      </view>

      <!-- 空状态 -->
      <view class="empty-state" wx:if="{{favorites.length === 0}}">
        <image src="/images/icons/empty.svg" class="empty-icon" mode="aspectFit" />
        <text class="empty-text">暂无收藏内容</text>
        <text class="empty-hint">浏览文章时点击收藏按钮添加</text>
      </view>

      <!-- 收藏列表 -->
      <view class="favorites-list" wx:else>
        <view
          class="favorite-item {{isEditMode ? 'edit-mode' : ''}}"
          wx:for="{{favorites}}"
          wx:key="id"
          bindtap="{{isEditMode ? '' : 'goToArticle'}}"
          data-id="{{item.id}}"
        >
          <!-- 拖拽图标 (编辑模式) -->
          <view class="drag-handle" wx:if="{{isEditMode}}">
            <image src="/images/icons/drag.svg" class="drag-icon" mode="aspectFit" />
          </view>

          <!-- 列表项内容 -->
          <view class="item-content">
            <text class="item-bullet">•</text>
            <text class="item-title">{{item.title}}</text>
            <view class="hot-tag" wx:if="{{item.isHot}}">
              <text>热</text>
            </view>
          </view>

          <!-- 删除按钮 (编辑模式) -->
          <view class="delete-btn" wx:if="{{isEditMode}}" catchtap="deleteFavorite" data-id="{{item.id}}">
            <image src="/images/icons/close.svg" class="delete-icon" mode="aspectFit" />
          </view>
        </view>
      </view>
    </view>
  </scroll-view>
</view>
