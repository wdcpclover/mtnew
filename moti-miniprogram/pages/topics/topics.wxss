/* 合集页面样式 - 使用全局CSS变量支持深色模式 */

.page {
  width: 100%;
  min-height: 100vh;
}

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: var(--bg-page);
}

/* ============ 导航栏 ============ */
.nav-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 32rpx;
  background-color: var(--bg-page);
}

.nav-left {
  width: 80rpx;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 20rpx;
  height: 34rpx;
}

.nav-center {
  flex: 1;
  text-align: center;
}

.nav-title {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.nav-right {
  display: flex;
  align-items: center;
}

.nav-capsule {
  display: flex;
  align-items: center;
  height: 60rpx;
  padding: 0 20rpx;
  background-color: var(--capsule-bg);
  border-radius: 30rpx;
  border: 1rpx solid var(--border-color);
}

.capsule-dots {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: var(--text-primary);
}

.dot.dot-large {
  width: 16rpx;
  height: 16rpx;
}

.capsule-divider {
  width: 2rpx;
  height: 32rpx;
  background-color: var(--border-color);
  margin: 0 16rpx;
}

.capsule-icon {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-img {
  width: 32rpx;
  height: 32rpx;
}

/* ============ 搜索栏 ============ */
.search-bar {
  display: flex;
  align-items: center;
  padding: 16rpx 32rpx;
  gap: 20rpx;
  background-color: var(--bg-page);
}

.search-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  height: 64rpx;
  padding: 0 20rpx;
  background-color: var(--bg-input);
  border-radius: 8rpx;
  gap: 12rpx;
}

.search-icon {
  width: 28rpx;
  height: 28rpx;
  opacity: 0.4;
}

.search-placeholder {
  font-size: 26rpx;
  color: var(--text-tertiary);
}

.search-input {
  flex: 1;
  height: 100%;
  font-size: 26rpx;
  color: var(--text-primary);
}

.search-clear {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.clear-icon {
  width: 28rpx;
  height: 28rpx;
  opacity: 0.4;
}

/* ============ 搜索建议下拉框 ============ */
.search-suggestions {
  position: absolute;
  top: 180rpx;
  left: 32rpx;
  right: 100rpx;
  background-color: var(--bg-primary);
  border-radius: 12rpx;
  box-shadow: var(--shadow-lg);
  z-index: 100;
  overflow: hidden;
}

.suggestion-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 28rpx;
  border-bottom: 2rpx solid var(--divider-color);
}

.suggestion-item:last-child {
  border-bottom: none;
}

.suggestion-item:active {
  background-color: var(--bg-secondary);
}

.suggestion-text {
  flex: 1;
  font-size: 28rpx;
  line-height: 1.4;
}

.suggestion-text .keyword {
  color: var(--text-primary);
}

.suggestion-text .rest {
  color: var(--color-primary);
}

.suggestion-arrow {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.4;
  margin-left: 16rpx;
}

/* 搜索遮罩 */
.search-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: var(--bg-mask);
  z-index: 50;
}

.message-btn {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.message-icon {
  width: 44rpx;
  height: 44rpx;
}

.badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 6rpx;
  background-color: var(--color-primary);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.badge text {
  font-size: 18rpx;
  color: #FFFFFF;
  font-weight: 500;
}

/* ============ 筛选栏 ============ */
.filter-bar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 32rpx;
  background-color: var(--bg-page);
  border-bottom: 2rpx solid var(--border-color);
}

.filter-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.filter-label {
  font-size: 28rpx;
  color: var(--text-primary);
}

.checkbox {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--bg-input);
}

.checkbox.checked {
  border-color: var(--color-primary);
  background-color: var(--color-primary);
}

.checkbox-inner {
  width: 16rpx;
  height: 10rpx;
  border-left: 3rpx solid #FFFFFF;
  border-bottom: 3rpx solid #FFFFFF;
  transform: rotate(-45deg);
  margin-bottom: 4rpx;
}

.filter-right {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.expand-text {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.expand-icon {
  width: 24rpx;
  height: 24rpx;
  opacity: 0.6;
}

/* ============ 内容列表 ============ */
.content-list {
  flex: 1;
  height: calc(100vh - 400rpx);
}

.list-inner {
  background-color: var(--bg-primary);
}

/* ============ 章节项 ============ */
.chapter-item {
  border-bottom: 2rpx solid var(--divider-color);
}

.chapter-header {
  display: flex;
  align-items: center;
  padding: 28rpx 32rpx;
}

.chapter-category {
  position: relative;
  width: 160rpx;
  flex-shrink: 0;
  padding-left: 16rpx;
}

.category-indicator {
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 32rpx;
  background-color: var(--color-primary);
  border-radius: 3rpx;
}

.category-text {
  font-size: 26rpx;
  color: var(--text-primary);
}

.category-text.active {
  color: var(--color-primary);
  font-weight: 500;
}

.chapter-title {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-primary);
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* ============ 文章列表（展开时） ============ */
.article-list {
  padding-left: 176rpx;
  padding-right: 32rpx;
  padding-bottom: 20rpx;
}

.article-item {
  padding: 16rpx 0;
  border-bottom: 2rpx solid var(--divider-color);
}

.article-item:last-child {
  border-bottom: none;
}

.article-title {
  font-size: 26rpx;
  color: var(--text-primary);
  line-height: 1.5;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.article-item.read .article-title {
  color: var(--text-tertiary);
}

/* ============ 加载状态 ============ */
.loading-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 48rpx 0;
  background-color: var(--bg-primary);
}

.loading-spinner {
  width: 48rpx;
  height: 48rpx;
  border: 4rpx solid var(--divider-color);
  border-top-color: var(--color-primary);
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: var(--text-tertiary);
}

/* 空状态 */
.empty-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
  background-color: var(--bg-primary);
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  opacity: 0.5;
}

.empty-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: var(--text-tertiary);
}

/* 底部安全区域 */
.safe-bottom {
  height: 160rpx;
  background-color: var(--bg-primary);
}

/* ============ 底部 TabBar ============ */
.bottom-tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: flex-start;
  justify-content: space-around;
  height: 100rpx;
  padding-bottom: env(safe-area-inset-bottom);
  background-color: var(--bg-primary);
  border-top: 2rpx solid var(--divider-color);
}

.bottom-tab-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 4rpx;
  padding: 16rpx 24rpx 12rpx;
}

.bottom-tab-item.active::before {
  content: '';
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 32rpx;
  height: 4rpx;
  background-color: var(--color-primary);
  border-radius: 2rpx;
}

.bottom-tab-icon {
  width: 40rpx;
  height: 40rpx;
}

.bottom-tab-text {
  font-size: 20rpx;
  color: var(--tab-color);
}

.bottom-tab-item.active .bottom-tab-text {
  color: var(--tab-active-color);
}
