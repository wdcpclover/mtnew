.container {
  min-height: 100vh;
  background-color: var(--bg-page);
}

/* 顶部导航 */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: var(--bg-card);
  z-index: 100;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 24rpx;
  height: 44px;
}

.header-left {
  width: 100rpx;
}

.header-center {
  flex: 1;
  text-align: center;
}

.header-right {
  width: 100rpx;
}

.capsule-placeholder {
  width: 100rpx;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

.header-title {
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-primary);
}

/* 内容滚动区 */
.content-scroll {
  height: 100vh;
}

.content-inner {
  padding: 24rpx;
}

/* 卡片 */
.card {
  background-color: var(--bg-card);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: 24rpx;
}

/* 信息行 */
.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid var(--border-light);
}

.info-row.last {
  border-bottom: none;
}

.info-label {
  font-size: 30rpx;
  color: var(--text-primary);
}

.info-value {
  font-size: 30rpx;
  color: var(--text-secondary);
}

.info-value.highlight {
  color: var(--color-primary);
  font-weight: 500;
}

/* 兑换码 */
.redeem-box {
  display: flex;
  align-items: center;
}

.gift-icon-box {
  width: 72rpx;
  height: 72rpx;
  background-color: var(--bg-secondary);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.gift-icon {
  width: 40rpx;
  height: 40rpx;
}

.redeem-input {
  flex: 1;
  height: 72rpx;
  background-color: var(--bg-secondary);
  border-radius: 12rpx;
  padding: 0 24rpx;
  margin: 0 16rpx;
  font-size: 28rpx;
  color: var(--text-primary);
}

.input-placeholder {
  color: var(--text-tertiary);
}

.redeem-btn {
  width: 120rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  background-color: var(--color-primary);
  color: #FFFFFF;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  flex-shrink: 0;
}

.redeem-btn.disabled {
  opacity: 0.5;
}

/* 付款列表 */
.payment-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid var(--border-light);
}

.payment-item.last {
  border-bottom: none;
}

.payment-left {
  flex: 1;
}

.payment-name {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: 8rpx;
}

.payment-date {
  font-size: 26rpx;
  color: var(--text-tertiary);
}

.payment-right {
  flex-shrink: 0;
}

.payment-amount {
  font-size: 32rpx;
  font-weight: 600;
  color: var(--color-primary);
}

/* 空状态 */
.empty-text {
  text-align: center;
  padding: 40rpx 0;
  font-size: 28rpx;
  color: var(--text-tertiary);
}

/* Dark Mode */
.container.dark {
  --bg-page: #1A1A1A;
  --bg-card: #242424;
  --bg-secondary: #333333;
  --text-primary: #FFFFFF;
  --text-secondary: rgba(255, 255, 255, 0.7);
  --text-tertiary: rgba(255, 255, 255, 0.5);
  --border-light: rgba(255, 255, 255, 0.1);
  --color-primary: #D7942B;
}

/* Light Mode (默认) */
.container:not(.dark) {
  --bg-page: #F5F5F5;
  --bg-card: #FFFFFF;
  --bg-secondary: #F0F0F0;
  --text-primary: #333333;
  --text-secondary: #666666;
  --text-tertiary: #999999;
  --border-light: #E5E5E5;
  --color-primary: #D7942B;
}
