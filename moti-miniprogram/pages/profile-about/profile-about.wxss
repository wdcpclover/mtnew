.page-container {
  min-height: 100vh;
  background-color: var(--bg-secondary);
}

.content-scroll {
  height: calc(100vh - 88rpx);
  padding: 48rpx;
}

.about-content {
  text-align: center;
}

.logo-section {
  margin-bottom: 60rpx;
}

.logo-wrapper {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, var(--accent-color) 0%, var(--accent-hover) 100%);
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 32rpx;
  box-shadow: var(--shadow-lg);
}

.logo-image {
  width: 100rpx;
  height: 100rpx;
}

.app-name {
  font-size: 40rpx;
  font-weight: 700;
  color: var(--text-primary);
  display: block;
  margin-bottom: 12rpx;
}

.app-version {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.intro-section {
  text-align: left;
  margin-bottom: 80rpx;
}

.intro-text {
  display: block;
  font-size: 28rpx;
  color: var(--text-primary);
  line-height: 1.8;
  margin-bottom: 24rpx;
}

.footer-section {
  padding-top: 40rpx;
  border-top: 1rpx solid var(--border-color);
}

.copyright {
  font-size: 22rpx;
  color: var(--text-tertiary);
  display: block;
  margin-bottom: 16rpx;
}

.links {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  font-size: 24rpx;
}

.link {
  color: var(--accent-color);
}

.link:active {
  opacity: 0.7;
}

.dot {
  color: var(--text-tertiary);
}
