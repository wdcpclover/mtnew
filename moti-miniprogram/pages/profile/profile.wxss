/* 我的页面样式 - 1:1还原设计稿 */

.page {
  width: 100%;
  min-height: 100vh;
}

.container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: var(--bg-page);
}

/* ============ 用户信息区 ============ */
.user-section {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx 28rpx;
  background-color: var(--bg-page);
}

.user-info {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.user-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background-color: var(--bg-secondary);
}

.user-detail {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-primary);
  line-height: 1.2;
}

.user-subtitle {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.2;
}

.edit-btn {
  padding: 16rpx 32rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 36rpx;
  background-color: transparent;
}

.edit-btn text {
  font-size: 26rpx;
  color: var(--text-primary);
}

.edit-btn:active {
  background-color: var(--bg-secondary);
}

/* ============ 阅读进度卡片 ============ */
/* 两个独立卡片，各175×90px，中间间隔8px */
.stats-wrapper {
  display: flex;
  justify-content: center;
  gap: 16rpx;
  margin: 8rpx auto 16rpx;
}

.stats-card {
  width: 350rpx;
  height: 180rpx;
  padding: 16rpx 16rpx 24rpx 16rpx;
  background-color: var(--bg-primary);
  border-radius: 12rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

/* 阅读进度 12px */
.stats-card-left .stats-title {
  font-size: 24rpx;
  color: var(--text-primary);
}

/* 你已阅读 11px */
.stats-card-right .stats-title {
  font-size: 22rpx;
  color: var(--text-primary);
  margin-bottom: 16rpx;
}

/* 底部区域：已读文章 + 进度条 */
.progress-section {
  margin-top: auto;
}

/* 已读文章 + 220/3000 同行，底部对齐 */
.progress-info {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  width: 318rpx;
  margin-bottom: 4rpx;
}

/* 已读文章 12px 金色渐变，与阅读进度同字号 */
.progress-label {
  font-size: 24rpx;
  background: linear-gradient(90deg, #EFB550 0%, #D7942B 100%);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
}

/* 220/3000 大一点加粗，右对齐与进度条尾部对齐 */
.progress-value {
  font-size: 32rpx;
  font-weight: 600;
  background: linear-gradient(90deg, #EFB550 0%, #D7942B 100%);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
}

/* 进度条 159×12px, 底部距离=高度=12px */
.progress-bar {
  width: 318rpx;
  height: 24rpx;
  background-color: #D9D9D9;
  border-radius: 12rpx;
  overflow: hidden;
}

.dark .progress-bar {
  background-color: rgba(217, 217, 217, 0.5);
}

/* 深色模式卡片背景 */
.dark .stats-card {
  background-color: rgba(255, 255, 255, 0.05);
}

.progress-fill {
  height: 100%;
  background: linear-gradient(90deg, #EFB550 0%, #D7942B 100%);
  border-radius: 12rpx;
}

.time-row {
  display: flex;
  align-items: baseline;
  margin-top: auto;
}

/* 110.2 30 小时 天 统一32rpx 加粗 金色渐变 */
.time-value {
  font-size: 32rpx;
  font-weight: 600;
  background: linear-gradient(90deg, #EFB550 0%, #D7942B 100%);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
}

.time-days {
  margin-left: 4rpx;
}

/* 小时 天 32rpx 加粗 金色渐变 */
.time-unit {
  font-size: 32rpx;
  font-weight: 600;
  background: linear-gradient(90deg, #EFB550 0%, #D7942B 100%);
  -webkit-background-clip: text;
  background-clip: text;
  color: transparent;
  margin-left: 2rpx;
  margin-right: 8rpx;
}

/* ============ 会员横幅 ============ */
/* 满宽 390×52px, 对角线渐变 */
.member-banner {
  display: flex;
  align-items: center;
  height: 104rpx;
  margin: 8rpx 17rpx 24rpx;
  padding: 0 32rpx;
  background: linear-gradient(135deg, #EFB550 0%, #D7942B 50%, #B68A33 100%);
  border-radius: 16rpx;
  gap: 16rpx;
  box-sizing: border-box;
}

.member-icon {
  width: 44rpx;
  height: 44rpx;
}

.member-text {
  font-size: 30rpx;
  color: #FFFFFF;
  font-weight: 500;
}

.member-banner:active {
  opacity: 0.9;
}

/* ============ 菜单列表 ============ */
/* 菜单项: 358×52px, 间隔16px, 居中 */
.menu-list {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 32rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 716rpx;
  height: 104rpx;
  padding: 0 32rpx;
  background-color: var(--bg-primary);
  border-radius: 16rpx;
  box-sizing: border-box;
}

.menu-item:active {
  background-color: var(--bg-secondary);
}

.menu-left {
  display: flex;
  align-items: center;
  gap: 28rpx;
}

.menu-icon {
  width: 56rpx;
  height: 56rpx;
}

.menu-text {
  font-size: 32rpx;
  color: var(--text-primary);
}

.menu-right {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.menu-arrow {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.3;
}

.badge {
  min-width: 44rpx;
  height: 44rpx;
  padding: 0 14rpx;
  background-color: #D7942B;
  border-radius: 22rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.badge text {
  font-size: 24rpx;
  color: #FFFFFF;
  font-weight: 600;
}

/* 开关样式 */
.dark-switch {
  transform: scale(0.9);
}

/* 深色模式箭头 */
.dark .menu-arrow {
  filter: invert(1) brightness(1.5);
  opacity: 0.5;
}

/* ============ 底部安全区域 ============ */
.safe-bottom {
  height: 160rpx;
  background-color: var(--bg-page);
}
