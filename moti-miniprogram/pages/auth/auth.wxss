/* 登录页面样式 - 6个步骤完整流程 */

/* ============ 页面容器 ============ */
.page {
  width: 100%;
  min-height: 100vh;
  font-family: "PingFang SC", "Helvetica Neue", "Source Han Sans CN", sans-serif;
}

.auth-container {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #F3F4F6;
  box-sizing: border-box;
}

.page.dark .auth-container {
  background-color: #1A1A1A;
}

/* ============ 导航栏 ============ */
.nav-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 32rpx;
  background-color: transparent;
}

.page.dark .nav-header {
  background-color: transparent;
}

.nav-left, .nav-right {
  width: 160rpx;
  height: 88rpx;
  display: flex;
  align-items: center;
}

.nav-right {
  justify-content: flex-end;
}

.back-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 20rpx;
  height: 34rpx;
}

.nav-center {
  flex: 1;
  text-align: center;
}

.nav-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #1F1F1F;
}

.page.dark .nav-title {
  color: #FFFFFF;
}

/* 右侧状态胶囊 */
.status-pill {
  display: flex;
  align-items: center;
  height: 60rpx;
  padding: 0 20rpx;
  background-color: #F4F4F4;
  border-radius: 30rpx;
}

.page.dark .status-pill {
  background-color: #333333;
}

.status-dots {
  display: flex;
  align-items: center;
  gap: 6rpx;
}

.dot {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: #1F1F1F;
}

.dot.dot-large {
  width: 16rpx;
  height: 16rpx;
}

.page.dark .dot {
  background-color: #FFFFFF;
}

.status-divider {
  width: 2rpx;
  height: 32rpx;
  background-color: #E0E0E0;
  margin: 0 16rpx;
}

.status-icon {
  width: 32rpx;
  height: 32rpx;
}

.scan-icon {
  width: 32rpx;
  height: 32rpx;
}

.nav-divider {
  height: 2rpx;
  background-color: #F3F4F6;
}

.page.dark .nav-divider {
  background-color: #333333;
}

/* ============ 主体内容 ============ */
.auth-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 0 64rpx;
}

/* Logo */
.logo-wrapper {
  display: flex;
  justify-content: center;
  margin-top: 180rpx;
  margin-bottom: 60rpx;
}

.logo {
  width: 200rpx;
  height: 200rpx;
}

/* 头像占位 */
.avatar-placeholder {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: #E5E5E5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-icon {
  width: 80rpx;
  height: 80rpx;
  opacity: 0.5;
}

/* 头像编辑 */
.avatar-wrapper {
  position: relative;
  width: 160rpx;
  height: 160rpx;
}

.avatar-img {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background-color: #E5E5E5;
}

.avatar-img.placeholder {
  padding: 40rpx;
  box-sizing: border-box;
}

.avatar-edit {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 48rpx;
  height: 48rpx;
  background-color: #D7942B;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.camera-icon {
  width: 28rpx;
  height: 28rpx;
}

/* 欢迎语 */
.welcome-text {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 80rpx;
}

.welcome-line {
  font-size: 34rpx;
  font-weight: 500;
  color: #1F1F1F;
  text-align: center;
}

.page.dark .welcome-line {
  color: #FFFFFF;
}

.welcome-desc {
  font-size: 26rpx;
  color: #666666;
  text-align: center;
  line-height: 1.6;
}

.page.dark .welcome-desc {
  color: #999999;
}

/* ============ 按钮 ============ */
.btn-group, .form-group {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  width: 100%;
}

.btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  width: 100%;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  font-weight: 500;
  padding: 0;
  margin: 0;
  border: none;
  line-height: 88rpx;
}

.btn::after {
  border: none;
}

.btn-icon {
  width: 40rpx;
  height: 40rpx;
}

.btn-secondary {
  background-color: #FFFFFF;
  color: #1F1F1F;
  border: 2rpx solid #EEEEEE;
}

.page.dark .btn-secondary {
  background-color: #2A2A2A;
  color: #FFFFFF;
  border-color: #3A3A3A;
}

.btn-primary {
  background-color: #D7942B;
  color: #FFFFFF;
}

.btn-primary[disabled] {
  background-color: #E5C89A;
  color: rgba(255, 255, 255, 0.7);
}

.btn-text {
  background-color: transparent;
  color: #666666;
  height: 60rpx;
  line-height: 60rpx;
}

/* ============ 输入框 ============ */
.input-box {
  display: flex;
  align-items: center;
  width: 100%;
  height: 88rpx;
  padding: 0 32rpx;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  border: 2rpx solid #EEEEEE;
  box-sizing: border-box;
}

.page.dark .input-box {
  background-color: #2A2A2A;
  border-color: #3A3A3A;
}

.input-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.input-label {
  font-size: 28rpx;
  color: #999999;
  margin-right: 20rpx;
  white-space: nowrap;
}

.input {
  flex: 1;
  height: 88rpx;
  font-size: 30rpx;
  color: #1F1F1F;
}

.page.dark .input {
  color: #FFFFFF;
}

.input-placeholder {
  color: #CCCCCC;
}

.input-clear {
  width: 36rpx;
  height: 36rpx;
  margin-left: 16rpx;
}

/* ============ 验证码输入 ============ */
.code-input-wrapper {
  display: flex;
  justify-content: space-between;
  position: relative;
  margin-bottom: 32rpx;
}

.code-box {
  width: 80rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  border: 2rpx solid #EEEEEE;
  font-size: 44rpx;
  font-weight: 600;
  color: #1F1F1F;
  position: relative;
}

.page.dark .code-box {
  background-color: #2A2A2A;
  border-color: #3A3A3A;
  color: #FFFFFF;
}

.code-box.active {
  border-color: #D7942B;
}

.code-box.filled {
  border-color: #D7942B;
  background-color: #FFF8F0;
}

.page.dark .code-box.filled {
  background-color: #3D3520;
}

.code-cursor {
  position: absolute;
  width: 4rpx;
  height: 44rpx;
  background-color: #D7942B;
  animation: blink 1s infinite;
}

@keyframes blink {
  0%, 50% { opacity: 1; }
  51%, 100% { opacity: 0; }
}

.code-input-hidden {
  position: absolute;
  left: -9999rpx;
  opacity: 0;
}

.resend-wrapper {
  text-align: center;
  padding: 16rpx 0;
}

.resend-text {
  font-size: 26rpx;
  color: #999999;
}

.resend-link {
  font-size: 26rpx;
  color: #D7942B;
}

/* ============ 底部区域 ============ */
.auth-footer {
  padding: 0 64rpx 40rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

.skip-btn {
  text-align: center;
  padding: 24rpx 0;
  margin-bottom: 16rpx;
}

.skip-btn text {
  font-size: 26rpx;
  color: #999999;
}

.agreement {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  gap: 4rpx;
  margin-bottom: 32rpx;
}

.agreement-text {
  font-size: 24rpx;
  color: #999999;
}

.agreement-link {
  font-size: 24rpx;
  color: #D7942B;
}

.home-indicator {
  width: 280rpx;
  height: 8rpx;
  background-color: #E9E9E9;
  border-radius: 4rpx;
  margin: 0 auto;
}

.page.dark .home-indicator {
  background-color: #333333;
}

/* ============ 下划线输入框样式 (登录4/5/6) ============ */
.form-group-line {
  display: flex;
  flex-direction: column;
  width: 100%;
}

.input-line {
  display: flex;
  align-items: center;
  height: 100rpx;
  border-bottom: 2rpx solid #E0E0E0;
  margin-bottom: 8rpx;
}

.page.dark .input-line {
  border-bottom-color: #3A3A3A;
}

.input-line-field {
  flex: 1;
  height: 100rpx;
  font-size: 30rpx;
  color: #1F1F1F;
  background: transparent;
}

.page.dark .input-line-field {
  color: #FFFFFF;
}

.input-line-placeholder {
  color: #AAAAAA;
  font-size: 30rpx;
}

/* 发送验证码按钮 */
.send-code-btn {
  flex-shrink: 0;
  padding-left: 24rpx;
}

.send-code-text {
  font-size: 28rpx;
  color: #D7942B;
  white-space: nowrap;
}

.send-code-text.disabled {
  color: #AAAAAA;
}

/* 错误提示 */
.error-tip {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  gap: 12rpx;
}

.error-icon {
  width: 32rpx;
  height: 32rpx;
}

.error-text {
  font-size: 26rpx;
  color: #E64545;
}

/* 登录按钮组 (微信图标 + 登录按钮) */
.login-btn-group {
  display: flex;
  align-items: center;
  gap: 24rpx;
  margin-top: 40rpx;
}

.wechat-btn {
  width: 88rpx;
  height: 88rpx;
  background-color: #FFFFFF;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  border: 2rpx solid #EEEEEE;
}

.page.dark .wechat-btn {
  background-color: #2A2A2A;
  border-color: #3A3A3A;
}

.wechat-icon {
  width: 48rpx;
  height: 48rpx;
}

.login-btn {
  flex: 1;
  margin: 0 !important;
}
