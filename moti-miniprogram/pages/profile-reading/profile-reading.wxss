.container {
  min-height: 100vh;
  background-color: var(--bg-color);
}

.header {
  position: sticky;
  top: 0;
  background-color: var(--card-bg);
  border-bottom: 2rpx solid var(--border-color);
  z-index: 100;
}

.header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 32rpx;
}

.back-btn {
  padding: 8rpx;
  margin-left: -8rpx;
}

.back-icon {
  width: 48rpx;
  height: 48rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: 700;
  color: var(--text-main);
}

.placeholder {
  width: 48rpx;
}

.content-scroll {
  height: calc(100vh - 120rpx);
  padding: 32rpx;
}

.overview-card {
  background-color: var(--card-bg);
  border-radius: 24rpx;
  border: 2rpx solid var(--border-color);
  padding: 40rpx;
  text-align: center;
  margin-bottom: 24rpx;
}

.overview-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-main);
  margin-bottom: 24rpx;
  display: block;
}

.progress-number {
  font-size: 120rpx;
  font-weight: 800;
  color: var(--accent-gold);
  display: block;
  margin-bottom: 32rpx;
}

.progress-bar {
  height: 24rpx;
  background-color: var(--border-color);
  border-radius: 12rpx;
  overflow: hidden;
  margin-bottom: 16rpx;
}

.progress-fill {
  height: 100%;
  background-color: var(--accent-gold);
  border-radius: 12rpx;
  transition: width 0.5s ease;
}

.progress-desc {
  font-size: 26rpx;
  color: var(--text-sub);
}

.stats-card {
  background-color: var(--card-bg);
  border-radius: 24rpx;
  border: 2rpx solid var(--border-color);
  padding: 32rpx;
  display: flex;
  justify-content: space-around;
  margin-bottom: 40rpx;
}

.stat-item {
  text-align: center;
}

.stat-value {
  font-size: 56rpx;
  font-weight: 700;
  color: var(--accent-gold);
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: var(--text-sub);
}

.stat-divider {
  width: 2rpx;
  background-color: var(--border-color);
  margin: 0 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: var(--text-main);
  margin-bottom: 24rpx;
  display: block;
}

.achievement-card {
  background-color: var(--card-bg);
  border-radius: 24rpx;
  border: 2rpx solid var(--border-color);
  padding: 24rpx;
}

.achievement-item {
  padding: 16rpx 0;
  font-size: 28rpx;
  color: var(--text-main);
  opacity: 0.5;
}

.achievement-item.active {
  opacity: 0.9;
}
