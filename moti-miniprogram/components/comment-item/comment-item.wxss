.comment-item {
  display: flex;
  padding: 32rpx 0;
  border-bottom: 1rpx solid var(--divider-color);
}

.comment-avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  flex-shrink: 0;
  background-color: var(--bg-secondary);
}

.comment-content {
  flex: 1;
  min-width: 0;
}

.comment-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.comment-author {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.comment-time {
  font-size: 24rpx;
  color: var(--text-tertiary);
}

.comment-text {
  font-size: 28rpx;
  color: var(--text-primary);
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.comment-actions {
  display: flex;
  gap: 48rpx;
}

.comment-action {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: var(--text-tertiary);
}

.comment-action-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.6;
}
