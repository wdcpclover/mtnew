.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: flex-start;
  justify-content: space-around;
  height: 100rpx;
  background-color: #FFFFFF;
  border-top: 2rpx solid #F0F0F0;
  z-index: 999;
}

.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-item {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  padding-top: 16rpx;
}

.tab-bar-item.active::before {
  content: '';
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 32rpx;
  height: 4rpx;
  background-color: #D7942B;
  border-radius: 2rpx;
}

.tab-bar-icon {
  width: 40rpx;
  height: 40rpx;
  margin-bottom: 4rpx;
}

.tab-bar-label {
  font-size: 20rpx;
  color: #999999;
}

.tab-bar-item.active .tab-bar-label {
  color: #D7942B;
}
