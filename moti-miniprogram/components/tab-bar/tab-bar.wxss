.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  align-items: center;
  justify-content: space-around;
  height: 140rpx;
  background-color: #FFFFFF;
  border-top: 2rpx solid #F6F6F6;
  z-index: 999;
}

.safe-area-bottom {
  padding-bottom: env(safe-area-inset-bottom);
}

.tab-bar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
  height: 100%;
}

.tab-bar-icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 8rpx;
}

.tab-bar-label {
  font-size: 20rpx;
  color: #AAAFBA;
}

/* Light mode - active: black text */
.tab-bar-item.active .tab-bar-label {
  color: #1F1F1F;
  font-weight: 500;
}

/* Dark Mode */
.tab-bar.dark {
  background-color: #1C1C1C;
  border-top-color: #303030;
}

.tab-bar.dark .tab-bar-label {
  color: #8E8E8E;
}

/* Dark mode - active: white text */
.tab-bar.dark .tab-bar-item.active .tab-bar-label {
  color: #E7E7E7;
}
