/* 底部TabBar - 基准 390×80，自适应贴底 */

/* 外层容器：自适应高度，贴底 */
.tab-bar {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: #FFFFFF;
  z-index: 999;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

/* 顶部边框线：1px → 2rpx */
.tab-bar-border {
  width: 100%;
  height: 2rpx;
  background-color: #EEEEEE;
}

/* 内容区域：padding 控制间距 */
/* 上 6px=12rpx，左右 23px=44rpx，下 12rpx 贴底 */
.tab-bar-content {
  display: flex;
  justify-content: space-between;
  padding: 12rpx 44rpx 12rpx 44rpx;
}

/* Tab项：56 × 48 px → 108 × 92 rpx */
.tab-bar-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 108rpx;
  height: 92rpx;
}

/* 图标：24 × 24 px → 46 × 46 rpx，位置 (16, 0) 居中 */
.tab-bar-icon {
  width: 46rpx;
  height: 46rpx;
}

/* 文字框：56 × 24 px → 108 × 46 rpx，位置 (0, 24)，字体 13px → 25rpx */
.tab-bar-label {
  width: 108rpx;
  height: 46rpx;
  font-size: 25rpx;
  color: #AAAFBA;
  text-align: center;
  line-height: 46rpx;
}

/* 选中状态 */
.tab-bar-item.active .tab-bar-label {
  color: #1F1F1F;
  font-weight: 500;
}

/* ============ Dark Mode ============ */
.tab-bar.dark {
  background-color: #2C2C2C;
}

.tab-bar.dark .tab-bar-border {
  background-color: #111111;
}

.tab-bar.dark .tab-bar-label {
  color: #AAAFBA;
}

.tab-bar.dark .tab-bar-item.active .tab-bar-label {
  color: #E7E7E7;
}
